<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.droidsonroids.receiver">

    <permission android:name="pl.droidsonroids.unknownfeatures.permission.transfer" android:protectionLevel="signature" android:label="Data transfer"/>
    <uses-permission android:name="pl.droidsonroids.unknownfeatures.permission.transfer" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:cantSaveState="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UnknownFeatures">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.UnknownFeatures.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>